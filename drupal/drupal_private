
  # For Drupal7 use /styles instead of /imagecache
  location ~ ^/system/files/ {
    try_files $uri @drupal;
  }


  # This rewrites pages to be sent to PHP processing
  location @drupal {
    index index.php;
    if (!-e $request_filename) {
      rewrite ^/(.*)$ /index.php?q=$1 last;
    }
  }

