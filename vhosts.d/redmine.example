server {
    listen   *:80;
    server_name redmine.example.com;

    access_log /var/log/nginx/redmine.access.log buffer=16k;
    error_log  /var/log/nginx/redmine.error.log info;

    root       /path/to/redmine/public;

    location / {
        proxy_redirect    off;
        try_files /system/maintenance.html $uri $uri/index.html $uri.html @ruby;
    }

    location ~ ^/assets/ {
        add_header Last-Modified "";
        add_header ETag "";
        add_header Cache-Control public;

        expires 1y;
    }

    location @ruby {
        proxy_pass http://127.0.0.1:3000;
    }

    location ~* \.(jpg|jpeg|gif|png|css|zip|tgz|gz|rar|bz2|doc|xls|exe|pdf|ppt|txt|tar|wav|bmp|rtf|js|ico)$ {
        add_header Last-Modified "";
        add_header ETag "";
        add_header Cache-Control public;

        expires 1y;

        log_not_found   off;
        access_log      off;
    }
}
